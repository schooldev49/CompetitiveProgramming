class Solution {
    public int arraySign(int[] nums) {
        // 1 if X is positive
        // -1 if x is negative
        // 0 if x = 0
        int num = 1;
        for (int i: nums){
            num *= i;
        }
        int result = 0;
        if (num > 0 ){
           result = 1;
        } else if (num < 0) {
            result = -1;
        }
        return result;
    }
}
